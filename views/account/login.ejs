<h1><%= title %></h1>

<%- messages() %>

<form class="login-form" action="/account/login" method="POST">
  <label for="email">Email:</label>
  <input type="email" id="email" name="account_email" required>

  <label for="password">Password:</label>
  <input type="password" id="password" name="account_password"
    pattern="(?=.*\d)(?=.*[A-Z]).{8,}" required>
  <div>
    <input type="checkbox" id="toggle-password-checkbox"
      class="toggle-password-checkbox">
    <label for="toggle-password-checkbox" id="toggle-password-label">
      <span>Show Password</span>
    </label>
  </div>
  <span class="error-message">Password must be at least 8 characters long and
    contain one uppercase letter and one number</span>

  <button type="submit">Login</button>

  <p>Don't have an account? <a href="/account/register">Register here</a></p>
</form>
<script src="/js/script.js"></script>
