<h1><%= title %></h1>

<%- messages() %>

<% if (errors) { %>
<ul class="notice">
  <% errors.array().forEach(error => { %>
  <li><%= error.msg %></li>
  <% }) %>
</ul>
<% } %>

<% if (accountData.account_type === "Client") { %>
<h2>Welcome <%= accountData.account_firstname %></h2>
<a href="/account/update_account">Update Account Information</a>
<% } 
else if (accountData.account_type === "Employee" ||
accountData.account_type === "Admin") { %>
<h2>Welcome <%= accountData.account_firstname %></h2>
<h3>Inventory Management</h3>
<p class="inv-mgt-link"><a href="/inventory/management">Access Inventory Management</a></p>
<a href="/account/update_account">Update Account Information</a>
<% } %>
